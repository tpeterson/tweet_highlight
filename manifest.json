{
  "manifest_version": 2,

  "name": "Tweet Highlight",
  "description": "This extension autopopulates a tweet with the selected text.",
  "version": "1.0",
"background": {
    "scripts": ["eventPage.js", "popup.js"],
    "persistent": false
  },
  "permissions": [
   "activeTab",
   "chrome://favicon/",
   "http://*/*", 
   "https://*/*"
 ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["http://*/*"],
    "js": ["content_script.js"],
    "run_at": "document_start",
    "all_frames": true
  }
 ]
}






	